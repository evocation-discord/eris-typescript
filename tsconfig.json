{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",

    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "sourceMap": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@modules/*": ["modules/*"],
      "@database/*": ["utils/database/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}